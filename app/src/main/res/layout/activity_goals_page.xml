<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GoalsNext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalsPage">

    <TextView
        android:id="@+id/textViewGoalsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Goals"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewGoalsOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGoalsOptions"
        android:layout_width="368dp"
        android:layout_height="163dp"
        android:layout_marginTop="72dp"
        android:background="#E8E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/oswald_bold"
        android:text=" Calories"
        android:textColor="#9AF82D"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/textViewExMin"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumberCalories"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewGoalsOptions" />

    <TextView
        android:id="@+id/textViewExMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Exercise Minutes"
        android:textColor="#00BCD4"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/textViewGoalsOptions"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumberExMin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textViewGoalsOptions" />

    <TextView
        android:id="@+id/textViewSteps"
        android:layout_width="116dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/oswald_bold"
        android:text=" Steps"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumberSteps"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewGoalsOptions"
        app:layout_constraintTop_toBottomOf="@+id/textViewGoalsHeading" />

    <EditText
        android:id="@+id/editTextNumberSteps"
        android:layout_width="208dp"
        android:layout_height="46dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:fontFamily="@font/oswald_light"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberCalories"
        app:layout_constraintEnd_toEndOf="@+id/textViewGoalsOptions"
        app:layout_constraintTop_toBottomOf="@+id/textViewGoalsHeading"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextNumberCalories"
        android:layout_width="204dp"
        android:layout_height="47dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:fontFamily="@font/oswald_light"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberExMin"
        app:layout_constraintEnd_toEndOf="@+id/textViewGoalsOptions" />

    <EditText
        android:id="@+id/editTextNumberExMin"
        android:layout_width="202dp"
        android:layout_height="51dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:fontFamily="@font/oswald_light"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGoalsOptions"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberCalories" />

    <TextView
        android:id="@+id/textViewRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Recommended"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGoalsOptions" />

    <TextView
        android:id="@+id/textViewStepVerbiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/oswald_light"
        android:text="Steps:"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRecommended" />

    <TextView
        android:id="@+id/textViewUnder18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/oswald_light"
        android:text="Under 18 years- 6000 steps per day"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStepVerbiage" />

    <TextView
        android:id="@+id/textViewAdults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/oswald_light"
        android:text="Adults- 10,000 steps per day"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUnder18" />

    <TextView
        android:id="@+id/textViewAdultsOver60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/oswald_light"
        android:text="Adults over 65 years- 3,000-10,000 steps per day "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdults" />

    <TextView
        android:id="@+id/textViewCalories1"
        android:layout_width="62dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oswald_light"
        android:text="Calories:"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdultsOver60" />

    <TextView
        android:id="@+id/textViewCalCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/oswald_light"
        android:text="Calorie Calculator"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCalories1" />

    <TextView
        android:id="@+id/textViewExMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/oswald_light"
        android:text="Exercise Minutes:"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCalCalculator" />

    <TextView
        android:id="@+id/textView16and17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/oswald_light"
        android:text="6-17 years- 60 minutes per day"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewExMinutes" />

    <TextView
        android:id="@+id/textViewCaloriefor18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/oswald_light"
        android:text="18+ years- 150 minutes per week"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/goalsNext"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16and17" />

    <Button
        android:id="@+id/goalsNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/oswald_bold"
        android:text="NEXT"
        android:textSize="18sp"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewCaloriefor18"
        app:layout_constraintTop_toBottomOf="@id/textView16and17"
        app:layout_constraintVertical_bias="0.344" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>