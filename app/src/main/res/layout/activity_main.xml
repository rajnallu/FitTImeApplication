<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/oswald_bold"
        android:includeFontPadding="false"
        android:text="FitTime"
        android:textColor="#0C0C0C"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGetStarted"
        android:layout_width="194dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:backgroundTint="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName" />


    <EditText
        android:id="@+id/editTextLogin"
        android:layout_width="219dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="@font/oswald_light"
        android:inputType="textPersonName"
        android:text="Already have an account? "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageBarbell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetStarted"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLOGIN"
        android:layout_width="97dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oswald_light"
        android:text="LOGIN"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#63191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetStarted" />

    <ImageView
        android:id="@+id/imageBarbell"
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/barbell" />
</androidx.constraintlayout.widget.ConstraintLayout>